@model exa.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Iniciar Sesión</title>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="~/js/login.js"></script>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Login.css" />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;700&display=swap" rel="stylesheet">

    <style>
        /* Estilo para el fondo de pantalla */
        body {
            background-image: url("https://articles-img.sftcdn.net/f_auto,t_article_cover_l/auto-mapping-folder/sites/2/2020/02/fondos-pantalla-espacio-header-1.jpg"); /* URL de la imagen de fondo en Internet */
            background-size: cover;
            background-position: center center;
            background-attachment: fixed;
        }

    </style>
</head>
<body>



    <div class="login-form">
        <h2>Log-in</h2>
        <form asp-controller="Home" asp-action="Login" method="post">
            <div class="usuario">
                <label for="username">Email:</label>
                <input class="linea-input" type="name" placeholder="Name" asp-for="Name" />
            </div>
            <div class="contrasena">
                <label for="password">Contraseña:</label>
                <input class="linea-input" type="password" placeholder="Password" asp-for="Password" />
            </div>
            <div class="btn-log">
                <button type="submit" class="btn-primary btn-round">Iniciar Sesión</button>
            </div>

            @if (ViewData["ValidateMessage"] != null)
            {
                <br />
                <br />
                <label>@ViewData["ValidateMessage"]</label>
            }
        </form>
        <p>
            ¿Aún no tienes una cuenta? <a class="register-link" href="/Home/SignUp">Registrarme</a>

        </p>
    </div>
</body>
</html>

